/* pages/question/question.wxss */
.page-container {
  font-size: 30rpx;
}
.top-view {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  background-color: white;
}
.top-view .icon-text{
  font-size: 40rpx;
  vertical-align: middle;
}
.top-view .icon-title{
  vertical-align: middle;
}
.top-view .top-left-view {
  flex-grow: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.top-view .top-center-view {
  flex-grow: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-left: 2rpx solid #a0a0a0;
  border-right: 2rpx solid #a0a0a0;
}
.top-center-view .top-month{
  margin-top: 20rpx;
  font-size: 36rpx;
  color: #6739b6;
}
.top-view .top-right-view {
  flex-grow: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.middle-view .question-item{
  background-color: white;
}
.question-item .question-title{
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 34rpx;
}
.question-item .question-img-view{
  padding: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
}
.question-img-view .question-img {
  width: 100%;
}
.blank-view {
  height: 118rpx;
  width: 100%;
  margin-top: 30rpx;
}
.bottom-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  height: 118rpx;
  padding: 20rpx;
  border-top: 2rpx solid #f0f0f0;
  z-index: 99;
}